        @*<link href="~/demo/demo.css" rel="stylesheet" asp-append-version="true" />*@
    </environment>
    @RenderSection("Styles", required: false)

</head>
<body class=" sidebar-mini">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-transparent  navbar-absolute bg-primary fixed-top">
        <div class="container-fluid">
            <div class="navbar-wrapper">
                <div class="navbar-toggle">
                    <button type="button" class="navbar-toggler">
                        <span class="navbar-toggler-bar bar1"></span>
                        <span class="navbar-toggler-bar bar2"></span>
                        <span class="navbar-toggler-bar bar3"></span>
                    </button>
                </div>
                <a class="navbar-brand" href="#pablo">@await Html.PartialAsync("_SelectLanguagePartial")</a>
            </div>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-bar navbar-kebab"></span>
                <span class="navbar-toggler-bar navbar-kebab"></span>
                <span class="navbar-toggler-bar navbar-kebab"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navigation">


                <ul class="navbar-nav">
                    <li class="nav-item  active ">
                        <a href="@Url.Action("Index","Home")" class="nav-link">
                            <i class="now-ui-icons now-ui-icons tech_tv"></i>
                            Home
                        </a>
                    </li>
                    
                    <li class="nav-item">
                        <a href="@Url.Action("Index","Home")" class="nav-link">
                            <i class="now-ui-icons design_app"></i>
                            Dashboard
                        </a>
                    </li>
                    <li class="nav-item ">
                        <a href="@Url.Action("Register","Administration")" class="nav-link">
                            <i class="now-ui-icons tech_mobile"></i>
                            Admin
                        </a>
                    </li>

                    @if (!string.IsNullOrWhiteSpace(name))
                    {
                    <li class="nav-item">
                        @*<a href="#" class="dropdown-toggle" data-toggle="dropdown"> <b class="caret"></b></a>*@
                        <a href="@Url.Action("Logout","Account")" class="nav-link">
                            <i class="now-ui-icons users_circle-08"></i>
                            Welcome @name, Logout
                        </a>
                        @ViewBag.CurrentDate
                    </li>
                    }
                    else
                    {
                        <li class="nav-item ">
                            <a href="@Url.Action("Login","Account")" class="nav-link">
                                <i class="now-ui-icons users_circle-08"></i>
                                Login
                            </a>
                        </li>

                    }
                </ul>



            </div>
        </div>
    </nav>
    <!-- End Navbar -->

    <div class="wrapper wrapper-full-page ">

        <div class="full-page pricing-page section-image">
            @RenderBody()

            <footer class="footer">
                <div class="container-fluid">
                    <nav>
                        <ul>
                            <li>
                                <a href="https://www.fintraksoftware.com/">
                                    Fintrak Software Co. Limited
                                </a>
                            </li>
                            <li>
                                @*<a href="http://presentation.fintraksoftware.com/">*@
                                <a href="http://www.fintraksoftware.com/About.html" target="_blank">
                                    About Us
                                </a>
                            </li>
                            <li>
                                @*<a href="http://blog.fintraksoftware.com/">*@
                                <a href="http://www.fintraksoftware.com/page14.html" target="_blank">
                                    Blog
                                </a>
                            </li>
                        </ul>
                    </nav>
                    <div class="copyright">
                        &copy;
                        @DateTime.Now.Year - ERP  by <a href="https://www.fintraksoftware.com/" target="_blank">Fintrak Software Co. Limited</a>.
                    </div>
                </div>
            </footer>
        </div>

    </div>

 
</body>
