@model AuthenticateCodeInputModel

<div class="col-md-4 ml-auto mr-auto">
    <form asp-route="Authenticate">
         @Html.AntiForgeryToken()
        <input type="hidden" asp-for="ReturnUrl" value="@Model.ReturnUrl" />
        <div class="card card-pricing card-plain">

            <div class="card-header">


                <h5 class="title"> <i class="title now-ui-icons business_bank"></i><br />Enterprise Resource Application &reg;</h5>
                <h6 class="description"> Limitless Resources Experience.</h6>

            </div>

            <div class="card-body ">
         
                <input type="hidden" asp-for="Username" value="@Model.Username" />
                <div class="input-group no-border form-control-lg">
                    <span class="input-group-addon">
                        <i class="now-ui-icons text_caps-small"></i>
                    </span>
                    <input type="password" class="form-control" placeholder="Code" asp-for="Code" autocomplete="off" autofocus>
                </div>
                <span style="color:white">Enter code sent to your email address</span>
                <div class="input-group no-border form-control-lg">
                    <button class="btn btn-info  btn-lg btn-block" name="button" value="Authenticate">Authenticate</button>
                </div>
            </div>


        </div>

    </form>
</div>
