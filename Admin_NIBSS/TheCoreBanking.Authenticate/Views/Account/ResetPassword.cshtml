@model ResetPasswordViewModel
<div class="col-md-4 ml-auto mr-auto">
    <form method="post">
        @Html.AntiForgeryToken()
        <input asp-for="Token" type="hidden" />
        <div class="card card-pricing card-plain">
            <div class="card-header">
                <h5 class="title"> <i class="title now-ui-icons business_bank"></i><br />The Core Banking &reg;</h5>
                <h6 class="description"> Limitless Banking Experience.</h6>

            </div>

            <div class="card-body ">
                @Html.Partial("_ValidationSummary")
                @ViewBag.MessageB
                <div class="input-group no-border form-control-lg">
                    <span class="input-group-addon">
                        <i class="now-ui-icons users_circle-08"></i>
                    </span>
                    <input class="form-control" type="email" placeholder="Registered email" asp-for="Email" autofocus>
                </div>

                <div class="input-group no-border form-control-lg">
                    <span class="input-group-addon">
                        <i class="now-ui-icons text_caps-small"></i>
                    </span>
                    <input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off">
                </div>
                <div class="input-group no-border form-control-lg">
                    <span class="input-group-addon">
                        <i class="now-ui-icons text_caps-small"></i>
                    </span>
                    <input type="password" class="form-control" placeholder="Confirm Password" asp-for="ConfirmPassword" autocomplete="off">
                </div>

                <div class="input-group no-border form-control-lg">
                    <button class="btn btn-primary  btn-lg btn-block" name="button" value="Reset">Reset Password</button>
                </div>
            </div>

        </div>

    </form>
</div>



