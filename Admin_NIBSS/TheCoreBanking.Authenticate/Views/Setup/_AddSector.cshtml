@model TheCoreBanking.Authenticate.Data.Model.TblSector

<div class="card card-plain">
    <div class="card-body">
        <div class="row">
            <div class="card card-plain">
                <div class="card-body">
                    <div id="sector-toolbar">
                        <button class="btn btn-danger" id="btnAddSectorSet"
                                onclick="openSectorModal()">
                            <i class="now-ui-icons ui-1_simple-add"></i>
                            Add Sector Setup
                        </button>
                    </div>
                    <table id="sectorTable" data-toggle="table"
                           data-url="./Setup/ListSectors"
                           data-search="true" class="data-table"
                           data-toolbar="#sector-toolbar"
                           data-search-align="right"
                           data-show-pagination-switch="true"
                            data-page-list="[5,10,25,50,100,150,200,250,300]"
                            data-page-size="15" data-pagination="true"
                           data-mobile-responsive="true"
                           data-show-refresh="true"
                           data-show-toggle="true"
                           data-buttons-class="danger">
                        <thead>
                            <tr>
                                <th data-field="name" data-sortable="true">Sector Name</th>
                                <th data-field="code" data-sortable="true">Sector Code</th>
                               
                                <th data-events="sectorEvents" data-formatter="editFormatter"
                                    data-align="center" data-width="5%"></th>
                                <th data-events="sectorEvents" data-formatter="deleteFormatter"
                                    data-align="center" data-width="5%"></th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Add modal and forms here -->
<div id="AddNewSector" class="modal fade" role="dialog" aria-hidden="true" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="card-title text-primary font-weight-bold w-100 ml-3 mb-3">
                    <span id="sectorTitle">New</span> Sector Setup
                </h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i class="now-ui-icons ui-1_simple-remove"></i>
                </button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row justify-content-center">
                        <div class="col">
                            <form id="frmSector">
                                <input type="hidden" name="sectorid" id="sectorid" />

                                <div class="row mb-2 required">
                                    <label class="col-md-4 col-form-label">Sector Name</label>
                                    <div class="col-md-8">
                                        <div class="form-group">
                                            <input name="name" required id="name"
                                                   type="text" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row mb-2 required">
                                    <label class="col-md-4 col-form-label">Sector Code</label>
                                    <div class="col-md-8">
                                        <div class="form-group">
                                            <input name="code" required id="code"
                                                   type="text" class="form-control" />
                                        </div>
                                    </div>
                                </div>

                                <div class="row mt-4 justify-content-between">
                                    <div class="col">
                                        <button class="btn btn-danger btn-wd pull-left" type="reset">Clear</button>
                                    </div>
                                    <div class="col">
                                        <button class="btn btn-danger btn-wd pull-right" type="button"
                                                id="btnAddSector" onclick="AddSectorSetup()">
                                            Save Record
                                        </button>
                                        <button class="btn btn-danger btn-wd pull-right" type="button"
                                                id="btnSectorUpdate" onclick="updateSectorSetup()">
                                            Update Record
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
